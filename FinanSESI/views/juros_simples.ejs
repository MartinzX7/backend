<h1 class="titulo">Juros Simples</h1>

<form action="/juros_simples" method="post">
    <label for="capital">Capital Inicial (P):</label>
    <input type="number" id="capital" name="capital" placeholder="Ex.: 1000" required>

    <label for="taxa">Taxa de Juros (% a.m.):</label>
    <input type="number" id="taxa" name="taxa" placeholder="Ex.: 5" required>
    
    <label for="tampo">Tempo (meses):</label>
    <input type="number" id="tempo" name="tempo" placeholder="Ex.: " required>

    <button type="submit">Calcular</button>

</form>
<% if (typeof total != 'undefined') { %>
    <div class ="resultado">
        <h2>Resultado:</h2>
        <p>Capital Final: <%= capital %></p>
        <p>Juros Simples: <%= juros %></p>
        <p>Total: <%= total %></p>
    </div>
<% } %>